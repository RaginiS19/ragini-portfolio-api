h2 Add Project
form(action="/admin/projects/add" method="POST")
  input(type="text" name="title" placeholder="Title" required)
  textarea(name="description" placeholder="Description")
  button(type="submit") Add Project

h2 Projects List
if projects.length
  each project in projects
    div.project-box
      h3= project.title
      p= project.description

      // Update Form
      form(action=`/admin/projects/update/${project._id}` method="POST")
        input(type="text" name="title" placeholder="Title" value=project.title required)
        textarea(name="description" placeholder="Description")= project.description
        button(type="submit") Update

      // Delete Form
      form(action=`/admin/projects/delete/${project._id}` method="POST")
        button(type="submit") Delete
else
  p No projects yet.
