h2 Add Project
form(action="/admin/projects/add" method="POST")
  input(type="text" name="title" placeholder="Title" required)
  textarea(name="description" placeholder="Description")
  input(type="text" name="technologies" placeholder="Technologies (comma-separated)")
  input(type="url" name="link" placeholder="Project link")
  input(type="url" name="image" placeholder="Image URL")
  button(type="submit") Add Project

h2 Projects List
if projects.length
  each project in projects
    div.project-box
      h3= project.title
      p= project.description
      p Tech: #{project.technologies.join(', ')}
      form(action=`/admin/projects/delete/${project._id}` method="POST")
        button(type="submit") Delete
else
  p No projects yet.
